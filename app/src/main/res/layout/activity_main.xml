<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_blue"
    tools:context=".MainActivity"
    >

    <!-- Image de la grille Sudoku -->


    <!-- Titre Sudoku -->
    <ImageView
        app:srcCompat="@drawable/per"
        android:id="@+id/grid_image"
        android:layout_width="293dp"
        android:layout_height="277dp"
        android:layout_marginTop="80dp"
        android:scaleType="fitCenter" android:layout_alignParentEnd="true" android:layout_marginEnd="30dp"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BeMyEyes"
        android:textSize="40sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@id/grid_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"/>

    <!-- Sous-titre Hatchling -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vos yeux, notre mission"
        android:textSize="25sp"
        android:textColor="#FFFF"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>


    <ImageView
        android:layout_width="215dp"
        android:layout_height="76dp" app:srcCompat="@drawable/right_arrow" android:id="@+id/imageView6"
        android:layout_alignParentEnd="true" android:layout_marginEnd="88dp"
        android:layout_alignParentBottom="true" android:layout_marginBottom="151dp"
        android:background="@drawable/cicrle_shape"
        android:foregroundGravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:src="@drawable/svg" android:layout_alignParentBottom="true" android:layout_marginBottom="-36dp"/>


</RelativeLayout>
